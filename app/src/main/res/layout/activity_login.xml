<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vishal.socialmate.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/drawable_login_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/aclonica"
            android:text="Welcome Back"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_email"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textStyle="normal"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/_15ssp"
            android:background="@drawable/et_bg_signup"
            android:padding="@dimen/_9sdp"
            android:hint="Enter Your Email"
            android:layout_marginBottom="@dimen/_20sdp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/_6sdp"
            android:textColorHint="@color/signup_hint_color"/>

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColorHint="@color/signup_hint_color"
            android:background="@drawable/et_bg_signup"
            android:padding="@dimen/_9sdp"
            android:maxLines="1"
            android:textStyle="normal"
            android:textSize="@dimen/_15ssp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:drawableStart="@drawable/ic_pass"
            android:drawablePadding="@dimen/_6sdp"/>

        <EditText
            android:id="@+id/login_cPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="@color/signup_hint_color"
            android:background="@drawable/et_bg_signup"
            android:padding="@dimen/_9sdp"
            android:maxLines="1"
            android:textSize="@dimen/_15ssp"
            android:textStyle="normal"
            android:drawableStart="@drawable/ic_confirm_pass"
            android:drawablePadding="@dimen/_6sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content"
                android:text="Not have a Account"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/light_black"
                android:clickable="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_2sdp"/>

            <TextView
                android:id="@+id/txt_switch2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Create One"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/light_blue"
                android:clickable="true" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_checkbox"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:checked="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="Show Password"
                android:textColor="@color/signup_hint_color"
                android:fontFamily="@font/akaya_telivigala"
                android:textSize="@dimen/_20ssp"
                android:textStyle="normal" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/btn_bg_signup"
            android:text="Log In"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"/>


        <ProgressBar
            android:id="@+id/login_progressBar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="invisible"/>

    </LinearLayout>



</ScrollView>