<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cir_pro_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/sample_img"
                app:civ_border_width="2dp"
                android:clickable="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_gravity="center"
                app:civ_border_color="#FF000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vishal Chauhan"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/send"/>
                </LinearLayout>


                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_1sdp"
                    android:text="Follow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:backgroundTint="#0EA8EF"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/images"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginEnd="@dimen/_2sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Friends"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginEnd="@dimen/_2sdp"/>/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="650"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:fontFamily="monospace"/>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posts"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginEnd="@dimen/_1sdp"/>/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:fontFamily="monospace"/>
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/headline_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="#0861A8"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:text="Student | Android Developer ðŸ˜€ | Programmer "
                android:layout_marginTop="@dimen/_15sdp" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/edit"
                android:layout_marginTop="@dimen/_13sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal">

            <View
                android:id="@+id/start_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue"/>

        </LinearLayout>

        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_1"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_2"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_3"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_4"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_5"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_6"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_7"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_8"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_9"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:clickable="true"
                    android:src="@drawable/sample_friend_10"
                    app:civ_border_color="@color/light_bottom_pink"
                    app:civ_border_width="@dimen/_1sdp" />

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Posts"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/arbutus_slab"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/profile_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_11sdp"
            app:tabTextColor="@color/black"
            app:tabIndicatorColor="@color/blue"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_10sdp"
            >

        </com.google.android.material.tabs.TabLayout>
        
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/profileViewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_87sdp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/sample_post_image1"
                app:shapeAppearanceOverlay="@style/roundimageview"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image2"
                app:shapeAppearance="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image3"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_87sdp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/sample_post_image4"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image5"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image6"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_87sdp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/sample_post_image7"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_image_post8"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_image_post9"
                app:shapeAppearanceOverlay="@style/roundimageview"/>

        </GridLayout>

    </LinearLayout>

</ScrollView>