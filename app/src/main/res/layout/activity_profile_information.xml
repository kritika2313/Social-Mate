<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.vishal.socialmate.Profile_Information_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:background="@drawable/top_backgrouund"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/akaya_telivigala"
                            android:gravity="center"
                            android:text="Profile Information"
                            android:textColor="#151111"
                            android:textSize="@dimen/_30ssp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/cir_img_view"
                        android:layout_width="151dp"
                        android:layout_height="194dp"
                        android:layout_marginTop="@dimen/_28sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/profile" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="359dp"
                        android:layout_height="320dp"
                        android:background="@drawable/white_back"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cir_img_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="320dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/pro_inf_userName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@drawable/et_bg_signup"
                                android:drawableStart="@drawable/ic_user"
                                android:drawablePadding="@dimen/_5sdp"
                                android:hint="Enter Username"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="#676060" />

                            <EditText
                                android:id="@+id/pro_inf_headline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@drawable/et_bg_signup"
                                android:drawableStart="@drawable/ic_info"
                                android:drawablePadding="@dimen/_5sdp"
                                android:hint="Enter Headline"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="#676060" />

                            <EditText
                                android:id="@+id/pro_inf_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@drawable/et_bg_signup"
                                android:drawableStart="@drawable/ic_location"
                                android:drawablePadding="@dimen/_5sdp"
                                android:hint="Enter Your Location"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="#676060" />

                            <EditText
                                android:id="@+id/pro_inf_profession"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@drawable/et_bg_signup"
                                android:drawableStart="@drawable/ic_work"
                                android:drawablePadding="@dimen/_5sdp"
                                android:hint="Enter Profession"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="#676060" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="105dp"
                android:layout_marginLeft="30dp"
                android:elevation="4dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_male"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/ic_male" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="@font/arbutus_slab"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_female"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/ic_female" />

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/arbutus_slab"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pro_inf_update_btn"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_bg_signup"
                android:text="Update"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />

            <ProgressBar
                android:id="@+id/pro_inf_progressbar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>